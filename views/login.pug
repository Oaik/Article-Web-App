extends layout

block content
    h1 Login
    if (errors)
        .alert.alert-danger
            each msg in errors
                h4=msg.msg
    form(method="POST" action='/users/login')       
        #form-group
            label Username:
            input.form-control(type="text", name='username')
        #form-group
            label Password:
            input.form-control(type="text", name='password')

        input.btn.btn-primary.mt-3(type='submit', value="Register")