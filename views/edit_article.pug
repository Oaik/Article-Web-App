extends layout

block content
    h1= title
    if (errors)
        .alert.alert-danger
            each msg in errors
                h4=msg.msg
    form(method="")
        #form-group
            label title:
            input.form-control#title(type="text", name='title' value=article.title)
        #form-group
            label Author:
            input.form-control#author(type="text", name='author' value=article.author)
        #form-group.mb-2
            label Body:
            textarea.form-control#body(name="body")= article.body
        input.btn.btn-primary.updatePost(type='submit', value="Update Article", data-id=article._id)